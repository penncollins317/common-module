<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.mxzero.security.core.mapper.RoleMapper">
    <select id="findByUserId" resultType="top.mxzero.security.core.entity.Role">
        SELECT r.id, r.name FROM t_role r join t_user_role ur ON r.id = ur.role_id WHERE ur.user_id = #{userId}
    </select>
</mapper>